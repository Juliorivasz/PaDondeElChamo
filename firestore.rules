rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para colección de usuarios (pública para leer lista en login)
    match /usuarios/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regla por defecto para todo lo demás (solo autenticados)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
